BoxLayout:
    orientation: "vertical"
    BoxLayout:
        size_hint_y: 1
        orientation: "horizontal"
        TextInput:
            id: input_number
            size_hint_x: None
            width: 500
            text: '34'
            font_size: 30
        BoxLayout:
            size_hint_x: 1
            orientation: "vertical"
            Button:
                id: up_button
                text: "Up"
            Button:
                id: down_button
                text: "Down"
    Button:
        text: 'Convert mi to km'
        font_size: 30
        # the following line specifies the function in the app class to call when the button is pressed
        on_press: app.handle_calculate(input_number.text)
    Label:
        id: output_label
        text: 'Enter distance in "miles"'
        font_size: 30
        color: (1, 1, 0, 1)
