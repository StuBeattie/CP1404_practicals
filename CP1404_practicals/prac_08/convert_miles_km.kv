BoxLayout:
    orientation: "vertical"
    BoxLayout:
        size_hint_y: 1
        orientation: "horizontal"
        TextInput:
            id: input_number
            size_hint_x: None
            width: 500
            text: '34'
            font_size: 30
            on_text: app.handle_calculate(input_number.text)
        BoxLayout:
            size_hint_x: 1
            orientation: "vertical"
            Button:
                font_size: 20
                text: "Up"
                on_press: app.increase_increment(input_number.text)
            Button:
                font_size: 20
                text: "Down"
                on_press: app.decrease_increment(input_number.text)
