BoxLayout:
    orientation: 'vertical'
    BoxLayout:
        size_hint_y: 0.7
        orientation: 'horizontal'
        TextInput:
            id: input_number
            text: '7'
            font_size: 48
            multiline: False
        Button:
            text: 'Square'
            font_size: 48
            # the following line specifies the function in the app class to call when the button is pressed
            on_press: app.handle_calculate(float(input_number.text))
        Label:
            id: output_label
            font_size: 48
            color: (255/255.0, 192/255.0, 203/255.0, 1) #(0, 1, 1, 1)
    Label:
        text: 'Enter a number and press "Square"'
        font_size: 30



